package java0423_array.prob;
/*
 * 4행 4열 data배열에 가로 세로 합계를 구하는 프로그램을 구현하시오.
 * [출력결과]
 *  1   2   3   6
 *  4   5   6  15
 *  7   8   9  24
 * 12  15  18  45
 */

public class Prob_02 {

	public static void main(String[] args) {
		int[][] data = new int[4][4];
	    int cnt=1;
		int sum=0;
		int sum2=0;
		
		for(int i=0; i<data.length; i++) {
			
		sum=0;
			for(int j=0; j< data[i].length; j++) {
			
				data[i][j]=cnt++;
				sum+=data[i][j];
			System.out.printf("%4d",data[i][j]);
			if(data[i][j]%3==0) {
				data[i][j+1]=sum;
			
			} 
			System.out.println();
		}
		}
		for (int z=0; z<5;z++) {
			sum2=0;
			for(int j=0; j<4;j++) {
				sum+=data[j][z];
				if(data[j][z]==0)
				System.out.printf("%4d",data[sum2][j]);
			}
		System.out.println();
		
		}
		for(int i=0;i<data.length;i++) {
			for(int j=0; j<data[i].length; j++)
			System.out.printf("%4d",data[i][j]);
		}System.out.println();
		
	}// end main()

}// end class


